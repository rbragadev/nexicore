generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  user_id      Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  cpf          String        @unique
  phone_number String?
  address      String?
  birthdate    DateTime?
  avatar       String?
  roles        String[]
  password     String
  is_active    Boolean       @default(true)
  createdAt    DateTime      @default(now())
  addresses    UserAddress[]
}

model UserAddress {
  id           Int     @id @default(autoincrement())
  user_id      Int
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  country      String
  cep          String
  user         User    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}
