generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  cpf       String     @unique
  schedules Schedule[] // Relacionamento com Schedule

  // Outros dados adicionais podem ser incluídos, como histórico de atendimentos, se necessário
}

model Professional {
  id           Int       @id @default(autoincrement())
  name         String
  specialty    String
  availability Json      // Armazena os horários disponíveis como JSON
  schedules    Schedule[] // Relacionamento com Schedule
}

model Schedule {
  id             Int          @id @default(autoincrement())
  professionalId Int
  userId         Int          // Relacionamento com User
  patientName    String
  date           DateTime
  status         String
  Professional   Professional @relation(fields: [professionalId], references: [id])
  User           User         @relation(fields: [userId], references: [id])
}

